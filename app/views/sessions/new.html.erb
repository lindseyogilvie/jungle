<section class="user-login-page">

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="form-group">
    <%= form_tag '/login' do %>

      Email: <%= text_field_tag :email %>
      &nbsp
      Password: <%= password_field_tag :password %>
      &nbsp&nbsp&nbsp
      <%= submit_tag "Submit", :class => 'btn btn-primary' %>
    
    <% end %>
  </div>

</section>
